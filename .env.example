# API Keys - Replace with your actual keys
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=SentimentFlow:v1.0 (by /u/your_username)

ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
POLYGON_API_KEY=your_polygon_api_key_here
FINANCIAL_MODELING_PREP_API_KEY=your_fmp_api_key_here

# Database Configuration
DATABASE_URL=postgresql://sentimentflow_user:sentimentflow_pass@localhost:5432/sentimentflow
REDIS_URL=redis://localhost:6379/0

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=sentimentflow-token-123
INFLUXDB_ORG=sentimentflow
INFLUXDB_BUCKET=market_data

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_SENTIMENT=market_sentiment_data
KAFKA_TOPIC_PREDICTIONS=stock_predictions

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
MAX_WORKERS=4
CACHE_TTL=300

# Model Configuration
MODEL_PATH=./models
FINBERT_MODEL=ProsusAI/finbert
SENTIMENT_THRESHOLD=0.1
PREDICTION_CONFIDENCE_THRESHOLD=0.6

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
FLOWER_PORT=5555

# External Services
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET=sentimentflow-data

# Google Cloud Configuration (if using GCP services)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
GCP_PROJECT_ID=your_gcp_project_id_here

# Email Configuration (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Feature Flags
ENABLE_REAL_TIME_STREAMING=True
ENABLE_MEME_DETECTION=True
ENABLE_OPTIONS_ANALYSIS=True
ENABLE_CRYPTO_SENTIMENT=False

# Performance Tuning
BATCH_SIZE=100
MAX_CONCURRENT_REQUESTS=50
WORKER_TIMEOUT=300
CELERY_WORKER_CONCURRENCY=4